<%- include("header.ejs") %>
<style>
  /* Add this CSS in your styles.css or within a <style> tag in your HTML/EJS file */

  /* Add this CSS in your styles.css or within a <style> tag in your HTML/EJS file */
  body {
    background-color: #f8f9fa;
    padding: 20px;
  }
  .edit-form-container {
    max-width: 400px;
    margin: auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .edit-form-container label {
    display: block;
    margin-bottom: 8px;
  }

  .edit-form-container input[type="text"],
  .edit-form-container textarea {
    width: 100%;
    padding: 8px;
    margin-bottom: 16px;
    box-sizing: border-box;
  }

  .edit-form-container button {
    background-color: #4caf50;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .edit-form-container button:hover {
    background-color: #45a049;
  }
</style>
<% if(locals.data != null){%>
<form class="edit-form-container" action="/<%=data.isbn%>/saved" method="post">
  <input type="hidden" name="bookId" value="<%= data.isbn %>" />

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= data.title %>" />

  <label for="date">Date:</label>
  <input
    type="text"
    id="date"
    name="date"
    value="<%= formatDate(data.date) %>"
  />

  <label for="rating">Rating:</label>
  <input type="text" id="rating" name="rating" value="<%= data.rating %>" />

  <label for="notes">Notes:</label>
  <textarea id="notes" name="notes" rows="9"><%= data.notes %></textarea>

  <button type="submit">Submit</button>
</form>
<%}%> <% function formatDate(date) { const options = { day: '2-digit', month:
'2-digit', year: 'numeric' }; return new Date(date).toLocaleDateString('en-GB',
options); } %>
